@page
@model Chat
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Chat";
}

@section Scripts
{
    @if (SignInManager.IsSignedIn(User))
    {
        
        <environment include="Development">
            <script type="text/javascript" src="~/js/chat.js"></script>
        </environment>
         <environment exclude="Development">
              <script type="text/javascript" src="~/js/chat.min.js"></script>
        </environment>
        <script>           
            $(".arstatus").click(function () {
                $.ajax({
                    url: '/',
                    data: {
                        status: $(this).data('status')
                    }
                })
            });
        </script>


    }
}
@if (SignInManager.IsSignedIn(User))
{
        <div class="container">
        <pre>
            Are you ready to talk with your visitors?            
        </pre>
        <div class="row">
            <div class="col-md-2">
                <div class="panel panel-primary">
                    <div class="panel-heading" id="accordion">
                        <span class="glyphicon glyphicon-user"></span> Users
                        <div class="btn-group pull-right">
                            
                        </div>
                    </div>
                    <div class="panel-collapse collapse in">
                        <div class="panel-body" style="height: 100%;" >
                            <ul id="userslist" class="chat" >
                            @if(Model.Users!=null){
                               @foreach (var user in Model.Users)
                                {
                                    <li ><a asp-page="/Chat" asp-page-handler='UserChat' asp-route-userId="@user.Id">@user.UserName</a></li>
                                }
                            }
                            </ul>
                        </div>
                        <div class="panel-footer">

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="panel panel-primary">
                    <div style="margin:5px 5px">
                        <button class="btn btn-success arstatus" data-status="Online" id="btnonline">Online</button>
                        <button class="btn btn-danger arstatus" data-status="Busy" id="btnbusy">Busy</button>
                        <button class="btn btn-warning arstatus" data-status="Away" id="btnaway">Away</button>
                    </div>
                    <div class="panel-heading" id="accordion">
                        <span class="glyphicon glyphicon-comment"></span> Chat
                        <div class="btn-group pull-right">
                            <a type="button" class="btn btn-default btn-xs" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                        </div>
                    </div>
                    <div class="panel-collapse collapse in" id="collapseOne">
                        <div class="panel-body" id="chatcontent">
                            <ul id="messagesList" class="chat">
                                @if(Model.Messages!=null)
                                {
                                    @foreach (var message in Model.Messages)
                                    {
                                        <li>@message.Content</li>
                                    }
                                }
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <div class="input-group">
                                <input type="hidden" value="You" id="txtuser" />
                                <input id="txtmessage" maxlength="250" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-warning btn-sm" id="btnsendmessage">
                                        Send
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
