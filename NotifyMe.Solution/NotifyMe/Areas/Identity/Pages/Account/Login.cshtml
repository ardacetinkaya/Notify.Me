@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" type="text/css" href="~/css/util.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">
<link rel="stylesheet" type="text/css" href="~/css/chat.css">
<div class="limiter" style="margin-top:-55px">
    <div class="container-login100">
        <div class="wrap-login100">
            <section>
                <form class="login100-form validate-form" method="POST">
                    <span class="login100-form-title p-b-43">
                        Login to continue
                    </span>
                   <div class="p-b-20">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    
                    <div class="wrap-input100 validate-input" >
                        <input asp-for="Input.Email" class="input100" type="text">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>
                    
                    
                    <div class="wrap-input100 validate-input">
                        <input asp-for="Input.Password" class="input100" type="password" >
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            
                        </div>

                        <div>
                            <p class="fs-12">
                                <a asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p class="fs-12">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </div>
            

                    <div class="container-login100-form-btn">
                       <button type="submit" class="btn btn-info btn-sm login100-form-btn"> <span class="glyphicon glyphicon-log-in"></span></button>
                    </div>
                    
                    
                </form>   
            </section>
            <div class="login100-more p-t-150 p-r-40 p-l-90" style="background-image:url('/images/showcase.jpg');">
                <div id="container" style="width: 400px;">
                    <chat ref="box" access-key="5DKZeomcebBrIQAKKXd79n4njerHaLRK"></chat>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="notifypopup"></div>
@section Scripts {

            <script src="~/js/component.js"></script>
            <script>
                var component = new Vue({
                        el: '#container'
                        });
            </script>
}
